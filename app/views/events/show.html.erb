<section class="event-show">

  <!-- HERO -->
  <div class="event-hero">
    <div class="event-hero__image">
      <%= image_tag @event.image || "placeholder.jpeg", alt: @event.name %>
    </div>
    <div class="event-hero__content">
      <h1 class="event-title"><%= @event.name %></h1>
      <p class="event-subtitle">Concert • Gipsy Jazz</p> <!-- texte statique -->

      <div class="event-card">
        <p><strong>📍 Lieu :</strong> <%= @event.address %></p>
        <p><strong>📅 Date :</strong> <%= @event.date %></p>
        <p><strong>⏰ Heure :</strong> 20h00</p> <!-- texte statique -->
      </div>

      <a href="#" class="btn-primary">Ça m’intéresse !</a>
    </div>
  </div>

  <!-- DESCRIPTION / GALERY -->
  <section class="event-description">
    <h2>À propos de l’événement</h2>
    <p><%= @event.description %></p>

  <div class="event-gallery">
  <img src="/assets/placeholder1.jpg" alt="Photo 1" class="gallery-item large">
  <img src="/assets/placeholder2.jpg" alt="Photo 2" class="gallery-item small">
  <img src="/assets/placeholder3.jpg" alt="Photo 3" class="gallery-item small">
  <img src="/assets/placeholder4.jpg" alt="Photo 4" class="gallery-item large">
</div>
  </section>




  <!-- INFOS PRATIQUES -->
  <section class="event-infos">
    <h2>Infos pratiques</h2>
    <ul>
      <li>📍 Adresse : <%= @event.address %> <a href="#">ici</a></li>
      <li>🚇 Accès : Tram B - Station Victoire</li>
      <li>♿ Accessibilité : PMR</li>
      <li>💶 Tarif : 15€</li>
    </ul>
  </section>

  <!-- AUTRES EVENTS -->
  <section class="event-suggestions">
    <h2>Les autres événements qui pourraient vous intéresser</h2>
    <div class="event-cards">
      <% if @events.any? %>
        <% @events.each do |event| %>
          <div class="event-card">
            <%= image_tag event.image || "placeholder.jpg", alt: event.name, class: "event-card-image" %>
            <h3><%= event.name %></h3>
            <p><%= event.date %></p>
            <p><%= event.description %></p>
            <a href="<%= event_path(event) %>" class="btn-secondary">En savoir plus</a>
          </div>
        <% end %>
      <% else %>
        <em>Désolé, aucun événement n'a été trouvé.</em>
      <% end %>
    </div>
  </section>

</section>
