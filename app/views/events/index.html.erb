<section class="event-suggestions">
<h2>Les événements autour de toi</h2>
<div class="container">
  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-user-marker-value="<%= @user_marker.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</section>

</div>

  <section class="event-suggestions">
    <h2>Les  événements qui pourraient vous intéresser autour de vous</h2>
    <div class="event-cards">
      <% if @events.any? %>
        <% @events.each do |event| %>
          <div class="event-card">
            <%= image_tag event.image || "placeholder.jpg", alt: event.name, class: "event-card-image" %>
            <h3><%= event.name %></h3>
            <p><%= event.date %></p>
            <p><%= event.description %></p>
            <a href="<%= event_path(event) %>" class="btn-secondary">En savoir plus</a>
          </div>
        <% end %>
      <% else %>
        <em>Désolé, aucun événement n'a été trouvé.</em>
      <% end %>
    </div>
  </section>
