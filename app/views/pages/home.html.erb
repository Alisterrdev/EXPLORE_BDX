<%= form_with url: events_path, method: :get, class: "mood-form" do %>
  <div class="mood-grid">
    <% moods.each do |tag, img| %>
      <% id = "tag_#{tag.parameterize}" %>

      <!-- checkbox cachée -->
      <input type="checkbox"
             name="tags[]"
             value="<%= tag %>"
             id="<%= id %>"
             class="mood-check">

      <!-- carte cliquable -->
      <label for="<%= id %>"
             class="mood-card"
             style="--photo: url('<%= asset_path(img) %>')">
        <span class="mood-card__photo" aria-hidden="true"></span>
        <span class="mood-card__title"><%= tag %></span>
      </label>
    <% end %>
  </div>

  <div class="mood-actions">
    <%= submit_tag "Rechercher", name: "", class: "btn btn-primary" %>
  </div>
<% end %>



